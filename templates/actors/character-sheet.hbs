{{!log 'character-sheet' this}}
<form class="{{cssClass}} flexrow no-wrap" autocomplete="off">
    {{!log "Chroniques Oubliées | actor" this}}
    {{> "systems/co/templates/actors/parts/character-sidebar.hbs"}}
    <div class="main">
        <header class="character-sheet-header">
            <div class="name flexrow bottom-separator">
                <input class="name-value" name="name" type="text" value="{{actor.name}}" placeholder="{{ localize 'CO.label.long.name' }}" spellcheck="false">
                <label class="level-label">{{ localize 'CO.label.short.level' }}</label>
                {{#if unlocked}}
                    <input class="level adjustable" type="text" name="system.attributes.level" value="{{attributes.level}}" data-dtype="Number">
                {{else}}
                    <span class="level adjustable">{{attributes.level}}</span>
                {{/if}}
            </div>
            <div class="flexrow" style="margin-top:0.25em;">
                <div class="adjustment-select flexrow">                    
                    {{#each actions as |a aid|}}                    
                        {{#each a.modifiers as |m mid| }}                                                                                              
                           {{#if (isActionState m)}}                                                         
                                <span class="adjustment elite trait">{{localize (concat "CO.label.long." m.target)}}</span>
                          {{/if}}
                        {{/each}}
                    {{/each}}
                </div>
            </div>
        </header>
        {{!-- Sheet Tab Navigation --}}
        <nav class="sheet-tabs tabs" data-group="primary">
            <a class="item" data-tab="main" data-tooltip="{{ localize 'CO.tabs.main' }}">{{ localize "CO.tabs.main" }}</a>
            <a class="item" data-tab="inventory" data-tooltip="{{ localize 'CO.tabs.inventory' }}">{{ localize "CO.tabs.inventory" }}</a>
            {{#if (lt xpleft 0)}}
                <a class="item red" data-tooltip="{{ localize 'CO.notif.TooMuchSpentXP' }}" data-tab="capacities">{{ localize "CO.tabs.capacities" }}({{xpleft}}) <i class="fa-solid fa-triangle-exclamation"></i></a>
            {{else}}
                {{#if (gt xpleft 0)}}
                    <a class="item blue" data-tooltip="{{ localize 'CO.notif.XPLeftToSpend' }}" data-tab="capacities">{{ localize "CO.tabs.capacities" }}({{xpleft}}) <i class="fa-solid fa-triangle-exclamation"></i></a>
                {{else}}
                    <a class="item" data-tab="capacities" data-tooltip="{{ localize 'CO.tabs.capacities' }}">{{ localize "CO.tabs.capacities" }}</a>
                {{/if}}
            {{/if}}
            <a class="item" data-tab="effects" data-tooltip="{{ localize 'CO.tabs.effects' }}">{{ localize "CO.tabs.effects" }}</a>
            <a class="item" data-tab="bio" data-tooltip="{{ localize 'CO.tabs.bio' }}">{{ localize "CO.tabs.bio" }}</a>
            {{#if unlocked}}
                <a class="item sheet-change-lock" data-tooltip="{{ localize 'CO.tabs.lock' }}"><i class="fas fa-lock-open"></i></a>
            {{else}}
                <a class="item sheet-change-lock" data-tooltip="{{ localize 'CO.tabs.unlock' }}"><i class="fas fa-lock"></i></a>
            {{/if}}
        </nav>

        {{! log "Chroniques Oubliées | detail" this}}
        <section class="sheet-body">
            <div class="tab main" data-group="primary" data-tab="main">
                {{> "systems/co/templates/actors/parts/character-main.hbs"}}
            </div>
            <div class="tab inventory" data-group="primary" data-tab="inventory">
                {{> "systems/co/templates/actors/parts/inventory/character-inventory.hbs"}}
            </div>
            <div class="tab capacities" data-group="primary" data-tab="capacities">
                {{> "systems/co/templates/actors/parts/paths/character-paths.hbs"}}
            </div>
            <div class="tab effects" data-group="primary" data-tab="effects">
                {{> "systems/co/templates/actors/parts/character-effects.hbs"}}
            </div>
            <div class="tab bio" data-group="primary" data-tab="bio">
                {{> "systems/co/templates/actors/parts/character-bio.hbs"}}
            </div>
        </section>
    </div>
</form>