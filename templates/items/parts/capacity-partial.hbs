{{!log "Chroniques Oubli√©es | capacity" this}}
<div class="details-form">
  {{#if debugMode}}
    <div class="form-group">
      <label>{{localize "CO.ui.id"}}</label>
      <div class="form-fields">
        <input class="field-value" name="data._id" readonly type="text" value="{{data._id}}" placeholder="{{localize 'CO.ui.id'}}" data-dtype="String" />
      </div>
    </div>
    <div class="form-group">
      <label>{{localize "CO.ui.key"}}</label>
      <div class="form-fields">
        <input class="field-value" name="system.slug" readonly type="text" value="{{item.system.slug}}" placeholder="{{localize 'COF.ui.key'}}" data-dtype="String" />
      </div>
    </div>
    <div class="form-group">
      <label>{{localize "CO.label.long.path"}}</label>
      <div class="form-fields">
        <input class="field-value" name="system.path" readonly type="text" value="{{system.path}}" data-dtype="String" />
      </div>
    </div>
  {{/if}}
  <div class="form-group">
    <label>{{localize "CO.ui.learned"}}</label>
    <div class="form-fields">
      <label class="checkbox"> <input type="checkbox" name="system.learned" {{checked system.learned}} /></label>
    </div>
  </div>
  <div class="form-group">
    <label>{{localize "CO.ui.xpCost"}}</label>
    <div class="form-fields">
      <label class="field-value">
        {{#if locked}}
          {{#if system.hasCost}}
            <input type="text" name="system.cost" value="{{system.cost}}" readonly />
          {{/if}}
        {{else}}
          <input type="text" name="system.cost" value="{{system.cost}}" />
        {{/if}}
      </label>
    </div>
  </div>
  <div class="form-group">
    <label>{{localize "CO.ui.manaCost"}}</label>
    <div class="form-fields">
      <label class="field-value">
        {{#if locked}}
          {{#if system.hasManaCost}}
            <input type="text" name="system.manaCost" value="{{system.manaCost}}" readonly />
          {{/if}}
        {{else}}
          <input type="text" name="system.manaCost" value="{{system.manaCost}}" />
        {{/if}}
      </label>
    </div>
  </div>
  <div class="form-group">
    <label>{{localize "CO.label.long.actionType"}}</label>
    <div class="form-fields">
      <select name="system.actionType" data-type="String" style="width:100%">
        {{selectOptions choiceCapacityActionTypes selected=system.actionType localize=true}}
      </select>
    </div>
  </div>
  <div class="form-group">
    <label>{{localize "CO.label.long.usageFrequency"}}</label>
    <div class="form-fields">
      <select name="system.frequency" data-type="String" style="width:100%">
        {{selectOptions choiceCapacityFrequency selected=system.frequency localize=true}}
      </select>
    </div>
  </div>
  {{#if system.hasFrequency}}
    <div class="form-group">
      <label>{{localize "CO.label.long.usageNumber"}}</label>
      <div class="form-fields">
        <input class="field-value" name="system.charges.current" type="text" value="{{system.charges.current}}" placeholder="{{localize 'CO.ui.current'}}" data-dtype="Number" />
        /
        <input class="field-value" name="system.charges.max" type="text" value="{{system.charges.max}}" placeholder="{{localize 'CO.ui.max'}}" data-dtype="Number" />
      </div>
    </div>
  {{/if}}
  <div class="form-group">
    <label>{{localize "CO.label.long.properties"}}</label>
    <div class="form-fields">
      {{#each system.properties as |prop idx|}}
        <label class="checkbox"> <input type="checkbox" name="system.properties.{{idx}}" {{checked prop}} /> {{localize (concat "CO.properties." idx)}}</label>
      {{/each}}
    </div>
  </div>
</div>
{{!> "systems/co/templates/items/parts/actions/action-partial.hbs"}}