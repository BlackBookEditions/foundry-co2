{{!log "Chroniques Oubli√©es | path" this}}
<section class="tab standard-form path{{#if tabs.details.active}} active{{/if}}" data-group="primary" data-tab="details">
    <section class="half-panel">
        <section class="panel-left">
            {{#if debugMode}}
                <fieldset class="debug">
                    <legend>{{localize "CO.ui.debug"}}</legend>
                    {{formGroup fields._id value=item.id disabled=true localize=true label="CO.ui.id"}}
                    {{formGroup systemFields.slug value=system.slug disabled=true localize=true}}
                </fieldset>
            {{/if}}

            <fieldSet class="infoInitial">
            <legend>{{localize "CO.ui.initialInformations"}}</legend>
            <div class="form-group">
                <label>{{localize "CO.label.long.subtype"}}</label>
                <div class="form-fields">
                    <select name="system.subtype" data-type="String" style="width:100%" class="{{#if locked}}disabled{{/if}}">
                        {{selectOptions @root.choicePathSubtypes selected=system.subtype localize=true}}
                    </select>
                </div>
            </div>

            {{formGroup systemFields.rank value=system.rank localize=true disabled=locked}}
            {{formGroup systemFields.maxDefenseArmor value=systemSource.maxDefenseArmor localize=true disabled=locked}}

            {{#if (isPathprestigious @root.system.subtype)}}
                {{formGroup systemFields.pvByLevel value=systemSource.pvByLevel localize=true}}
            {{/if}}
            </fieldSet> 
        </section>
        <section class="panel-right">
            <h4 class="form-header">
                <a data-action="toggleSection">{{localize "CO.label.long.capacities"}}</a>
            </h4>
            <div class="capacity-list list-4col foldable">
                <div class="cell center">
                </div>
                <div class="cell"></div>
                <div class="cell left">
                    <span class="field-label header"></span>
                </div>
                <div class="cell right item-controls">
                </div>
                {{#each capacities as |capacity id|}}
                    {{!log 'capacity' capacity id}}
                    <div class="cell center">
                        <span class="field-label header">{{#if (isPathprestigious @root.system.subtype)}}{{add id 4}}{{else}}{{add id 1}}{{/if}}</span>
                    </div>
                    <div class="cell center item draggable" data-uuid="{{capacity.uuid}}" data-item-type="capacity">
                        <a class="item-control" data-action="editItem" data-tooltip="{{localize 'CO.label.long.editCapacity'}}" data-tooltip-direction="UP"><img
                            class="inline-img"
                            src="{{capacity.img}}"/>
                        </a>
                    </div>
                    <div class="cell left">
                        <div class="field-label ellipse" data-tooltip="{{capacity.system.description}}" data-tooltip-direction="UP">{{capacity.name}}
                        {{#if capacity.system.isSpell}} * {{/if}}{{#if capacity.system.hasActionType}} ({{capacity.system.actionTypeShortLabel}}){{/if}}</div>
                    </div>               
                    <div class="cell right item item-controls" data-uuid="{{capacity.uuid}}" data-item-type="capacity" data-rank="{{#if (isPathprestigious @root.system.subtype)}}{{add id 4}}{{else}}{{add id 1}}{{/if}}">
                        {{#if (and @root.unlocked @root.isNotOwned)}}
                            <button class="item-control" data-action="deleteItem"  data-tooltip="{{localize 'CO.label.long.deleteCapacity'}}" data-tooltip-direction="UP"><i class="fas fa-fw fa-trash"></i></button>
                        {{/if}}
                    </div>                    
                {{/each}}
            </div>
        </section>
    </section>
</section>
